<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="USER.details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <ImageView
            android:id="@+id/flag_image"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_launcher" />


        <Button
            android:id="@+id/pickCountry"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="145dp"
            android:background="@color/teal_700"
            android:text="Pick Country" />

        <TextView
            android:id="@+id/countryNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="50dp"
            android:text="Country"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pickState"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            android:background="@color/teal_700"
            android:text="Pick State" />


        <TextView
            android:id="@+id/state_name"
            android:layout_width="186dp"
            android:layout_height="41dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/round"
            android:text="State"
            android:textAlignment="center"
            android:textColor="#120F0F"
            android:textSize="20dp" />

        <Button
            android:id="@+id/pick_city"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="260dp"
            android:background="@color/teal_700"
            android:text="Pick City" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="190dp"
            android:layout_height="43dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/round"
            android:gravity="center"
            android:text="City"
            android:textColor="#020101"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="401dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="407dp"
            android:layout_marginBottom="250dp"
            android:background="@drawable/square" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>